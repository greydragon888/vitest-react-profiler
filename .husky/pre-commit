#!/bin/sh

# Exit on any error
set -e

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged for incremental linting and formatting
echo "ğŸ“ Formatting and linting staged files..."
NODE_OPTIONS="--max-old-space-size=4096" npx lint-staged

# Run type checking
echo "ğŸ”· Type checking..."
npm run typecheck

# Check for unused code
echo "ğŸ§¹ Checking for unused code..."
npm run lint:unused

# Check for code duplication
echo "ğŸ“‹ Checking for code duplication..."
npx jscpd src --threshold 2

# Run tests with coverage
echo "ğŸ§ª Running tests with coverage..."
npm run test:coverage

echo "âœ… Pre-commit checks passed!"
