#!/bin/sh

# Exit on any error
set -e

echo "🔍 Running pre-commit checks..."

# Run lint-staged for incremental linting and formatting
echo "📝 Formatting and linting staged files..."
npx lint-staged

# Run type checking
echo "🔷 Type checking..."
npm run typecheck

# Run tests (without coverage for speed)
echo "🧪 Running tests..."
npm run test

echo "✅ Pre-commit checks passed!"