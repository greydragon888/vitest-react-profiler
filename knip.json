{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreWorkspaces": ["examples/*"],
  "ignore": [
    "dist/**",
    "coverage/**",
    "reports/**",
    "**/*.config.{ts,mts,mjs,js}",
    "**/*.d.ts"
  ],
  "ignoreDependencies": [
    "husky",
    "terser",
    "fast-check",
    "@testing-library/user-event"
  ],
  "ignoreBinaries": ["open"],
  "ignoreExportsUsedInFile": true,
  "workspaces": {
    ".": {
      "entry": [
        "src/auto-setup.ts",
        "tests/**/*.test.{ts,tsx}",
        "tests/**/*.bench.{ts,tsx}",
        "tests/**/*.properties.tsx",
        "tests/**/*.stress.{ts,tsx}"
      ],
      "project": ["src/**/*.{ts,tsx}"],
      "vitest": {
        "config": [
          "vitest.config.mts",
          "vitest.config.unit.mts",
          "vitest.config.common.mts",
          "vitest.config.properties.mts",
          "vitest.config.bench.mts",
          "vitest.config.stress.mts",
          "vitest.stryker.config.mts"
        ]
      }
    }
  }
}
