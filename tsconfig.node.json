{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "allowJs": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["node"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "vitest.config.mts",
    "examples/*/vitest.config.mts",
    "*.config.ts",
    "*.config.mts",
    "*.config.js"
  ]
}
