# Engine version enforcement
# Ensures Node.js version compatibility as specified in package.json
engine-strict=true

# Version saving strategy
# false = use semver ranges (^1.0.0) for flexibility
# true would save exact versions (1.0.0) for stricter control
save-exact=false

# Lock file generation
# Ensures reproducible installations across environments
package-lock=true

# Security audit configuration
# moderate = report vulnerabilities of moderate severity and above
# Options: low, moderate, high, critical, none
audit-level=moderate

# Funding messages
# Disable funding requests from packages
fund=false

# Cache optimization
# Prefer cached packages when available to speed up installations
prefer-offline=true

# Registry configuration
# Use default npm registry
registry=https://registry.npmjs.org/

# Install behavior
# Save packages to dependencies and update lock file
save=true

# Workspace configuration for monorepo
# Install all workspace dependencies during npm install
workspaces-update=true

# Ensure peer dependencies are installed
# false = npm 7+ behavior (automatic peer deps installation)
legacy-peer-deps=false

# Script execution
# Allow scripts to run during installation (needed for some packages)
ignore-scripts=false

# Progress bar display
# Show progress during installation
progress=true

# Git tag versioning
# Add git tags when versioning
git-tag-version=true

# Initialization defaults for npm init
init-author-name=vitest-react-profiler
init-author-url=https://github.com/greydragon888/vitest-react-profiler
init-license=MIT
